# CRIANDO BASE E TABELAS 

CREATE DATABASE pdo;

USE pdo;

CREATE TABLE autor (
    id   INT,
    nome VARCHAR(60),
    email VARCHAR(100)
);

INSERT INTO autor (id, nome, email) VALUES (1, 'JOSE', 'teste1@teste.com');
